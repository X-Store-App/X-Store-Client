{
  "build": {
    "appId": "com.xstore.client"
  },
  "name": "xstore-electron-client",
  "productName": "XStore Client",
  "version": "1.0.0",
  "description": "Client for XStore",
  "main": "main.js",
  "repository": "https://github.com/X-Store-App/client",
  "author": "XStore",
  "license": "MIT",
  "scripts": {
    "start": "npm run build:webpack:main && run-p script:build watch:webpack:renderer watch:electron",
    "package": "run-p build:webpack package:electron:windows",
    "package:electron:windows": "electron-builder -w",
    "package:electron:linux": "electron-builder -l",
    "package:electron:darwin": "electron-builder -m",
    "electron:start": "electron .",
    "build:webpack": "webpack --config webpack.config.js --mode=production",
    "build:webpack:test": "webpack --config webpack.config.js --mode=production --env.NODE_ENV=test",
    "build:webpack:main": "webpack --config webpack.config.js --mode=development --config-name preload && webpack --mode=development --config-name main",
    "watch:webpack:renderer": "webpack-dev-server --config webpack.config.js --mode=development --config-name renderer",
    "webpack:live": "webpack-dev-server --webpack.config.js",
    "lint": "eslint ./**"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@types/electron": "^1.6.10",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "electron": "^10.1.4",
    "electron-builder": "^22.9.1",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "html-webpack-plugin": "^4.5.0",
    "npm-run-all": "^4.1.5",
    "parallel-webpack": "^2.6.0",
    "react": "^16.13.1",
    "sass": "^1.26.11",
    "sass-loader": "^10.0.2",
    "spectron": "^12.0.0",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-html-plugin": "^0.1.1"
  },
  "dependencies": {
    "@xstoreapp/api": "^1.0.0",
    "@xstoreapp/react-design": "^0.1.2"
  }
}
