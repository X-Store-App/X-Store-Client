{
  "build": {
    "appId": "com.xstore.client"
  },
  "name": "xstore-electron-client",
  "productName": "XStore Client",
  "version": "1.0.0",
  "description": "Client for XStore",
  "main": "main.js",
  "repository": "https://github.com/X-Store-App/X-Store-Client",
  "author": "XStore",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --config config/webpack.config.js && electron .",
    "package": "npm run webpack:bundle && npm run package:electron:windows",
    "package:electron:windows": "electron-builder -w",
    "package:electron:linux": "electron-builder -l",
    "package:electron:darwin": "electron-builder -m",
    "webpack:bundle": "webpack --config config/webpack.config.js"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@types/electron": "^1.6.10",
    "devtron": "^1.4.0",
    "electron": "^10.1.3",
    "electron-builder": "^22.9.1",
    "html-webpack-plugin": "^4.5.0",
    "parallel-webpack": "^2.6.0",
    "react": "^16.13.1",
    "sass": "^1.26.11",
    "sass-loader": "^10.0.2",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-html-plugin": "^0.1.1"
  },
  "dependencies": {
    "@xstoreapp/api": "^1.0.0",
    "@xstoreapp/react-design": "^0.1.2"
  }
}
